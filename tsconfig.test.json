{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./",
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
  },
  "include": ["src/**/*", "test/**/*", "vite.config.ts"],
  "exclude": ["node_modules"]
}
